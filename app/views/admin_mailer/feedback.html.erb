<% content_for :message do %>

  <p><%= style_bold("Here's some user feedback on the Archive!") %></p>
  <% if @username.blank? %>
    <p>Username: Anonymous user</p>
    <% else %>
    <p>Username: <%= raw @username %></p>
  <% end %>
  <% unless @email.blank? %>
    <p>Email address: <%= raw @email %></p>
  <% end %>
  <p>
    Language: <%= @language %>
  </p>
  <% unless ArchiveConfig.REVISION.blank? %>
    <p>
      Archive revision: (rev. <%= ArchiveConfig.REVISION %>)
    </p>
  <% end %>


  Feedback:
  <p><b><%= (raw @summary) %></b></p>
  <p><%= (raw @comment) %></b></p>

<% end %>

<% content_for :sent_at do %>
  <%= Time.now.to_s(:time_for_mailers) %>
<% end %>



