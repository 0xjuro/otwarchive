<div class="admin">
<!--Descriptive page name, messages and instructions--><h2 class="heading"><%= ts("Abuse Report") %> <%= @abuse_report.id %></h2>
<!--/descriptions-->

<!--main content-->
<div class="abuse comment group" role="article">
  <h4 class="heading byline"><%= @abuse_report.email.blank? ? ts("Anonymous") : mail_to(@abuse_report.email) %> <%= ts("regarding") %> <%= link_to @abuse_report.url, @abuse_report.url %></h4>
  <blockquote class="userstuff"><%=raw sanitize_field(@abuse_report, :comment) %></blockquote>
  <p class="datetime"><%= ts("Reported") %> <%= time_ago_in_words @abuse_report.created_at %></p>
</div>
<!--/content-->

</div>
