<!--Descriptive page name, messages and instructions--><h2 class="heading"><%= ts("Abuse Report") %> <%= @abuse_report.id %></h2>
<!--/descriptions-->

<!--subnav-->
<ul class="navigation actions" role="navigation">
	<li><%= link_to ts("All abuse reports"), abuse_reports_path %></li>
</ul>
<!--/subnav-->

<!--main content-->
<!--FRONT END, should this be a table or should it be an inbox?
need to see some realdata to know, suspect inbox-->
<div class="wrapper">
	<table id="abuse_report_table" summary="<%= ts("The full abuse report including sender, URL of reported page, date reported, and detailed statement.") %>">
		<caption><%=ts("Detailed Abuse Report") %></caption>
		<tr>
			<th scope="row"><%=ts("From") %></th>
			<td><%= @abuse_report.email.blank? ? ts("Anonymous") : mail_to(@abuse_report.email) %></td>
		</tr>
		<tr>
			<th scope="row"><%=ts("Regarding") %></th>
			<td><%= link_to @abuse_report.url, @abuse_report.url %></td>
		</tr>
		<tr>
			<th scope="row"><%=ts("Reported") %></th>
			<td><%= time_ago_in_words @abuse_report.created_at %></td>
		</tr>
		<tr>
			<th scope="row"><%=ts("Statement") %></th>
			<td class="userstuff"><%=raw sanitize_field(@abuse_report, :comment) %></td>
		</tr>
	</table>
</div>
<!--/content-->

<!--subnav-->
<ul class="navigation actions" role="navigation">
	<li><%= link_to ts("All abuse reports"), abuse_reports_path %></li>
</ul>
<!--/subnav-->
