<% if @favorite_tag.new_record? %>
  <%= form_for([@current_user, @favorite_tag], method: 'post', html: { id: 'favorite_tag' }) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :tag_id %>
    <%= f.submit ts("Favorite Tag") %>
  <% end %>
<% else %>
  <%= form_for([@current_user, @favorite_tag], method: 'delete', html: { id: 'favorite_tag' }) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :tag_id %>
    <%= f.submit ts("Unfavorite Tag") %>
  <% end %>
<% end %>