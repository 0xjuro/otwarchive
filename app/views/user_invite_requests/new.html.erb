<!--Descriptive page name, messages and instructions-->
<h2>Request more invites</h2>
<!--/descriptions-->

<!--main content-->
<%= form_for(@user_invite_request) do |f| %>
  <%= render "shared/error_messages", :target => @user_invite_request %>
  <p>
    <%= f.label "How many invites are you requesting?" %> <%= f.text_field :quantity, :size => '2' %>
  </p>
  <p>
    <%= f.label "Reason for your request:" %>
    <%= f.text_area :reason, :size => '100x10' %>
  </p>
  <p class="submit">
    <%= f.submit 'Create' %>
  </p>
<% end %>
<!--/content-->