<!--Descriptive page name, messages and instructions-->
<h2><%= t("archive_faq", :default => "Archive FAQ") -%></h2>
<!--/descriptions-->

<!--subnav-->
<!--BACK END admin_header should go here for consistency with KI and AP-->
<%- if logged_in_as_admin? -%>
<p class="navigation" role="navigation"><%= link_to "Add a new section", new_archive_faq_path %></p>  
<%- end -%>
<!--/subnav-->

<!--main content-->
<div class="user-generated-view">
  <p>Some commonly asked questions about the Archive are answered here. 
  You may also like to check out our <%= link_to "Known Issues", known_issues_path %>. 
  If you need more help, please submit a <%= link_to "support request", feedbacks_path %>.</p>

<%- unless @archive_faqs.blank?  -%>
  <h3 id="categories">Available Categories</h3>
  <ol role="navigation">
    <%- for faq in @archive_faqs -%>
    <li><%= link_to faq.title, "##{faq.title.underscore}" %></li>
    <%- end -%>
  </ol>

	<%- for faq in @archive_faqs -%>
		<h3 id="<%= faq.title.underscore %>"><%=h faq.title %></h3>
		<%- if logged_in_as_admin? -%>
		<p class="navigation" role="navigation"><%= link_to "Edit this section", edit_archive_faq_path(faq) %></p>  
		<%- end -%>	
	  <%= sanitize_and_format_for_display faq.content %>
	  <p class="navigation" role="navigation"><a href='#categories'>Back to Available Categories</a></p>
	<%- end -%>
<%- end -%>
</div>   