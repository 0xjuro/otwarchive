<!--Descriptive page name, messages and instructions-->
<h2><%=h 'Editing series' %></h2>
<!--/descriptions-->

<!--subnav-->
<h3 class="landmark">Actions</h3>
<ul class="navigation" role="navigation">
<li><%= link_to 'Delete Series', @series, :confirm => 'Are you sure?', :method => :delete %></li>
<li><%= link_to 'Reorder Series', manage_series_path(@series) %></li>
<li><%= link_to 'Show', @series %></li>
<li><%= link_to 'Back', series_path %></li>
</ul>
<!--/subnav-->

<!--main content-->
<div id="work-form" class="work-form">
<% form_for(@series) do |f| %>
  <%= f.error_messages %>
  <p class="notice required"><%=h t('required', :default => '* Required information') %></p>
  <fieldset>
    <dl>
      <dt><%= f.label :title, "Series Title*", :class => "required" %></dt>
      <dd><%= f.text_field :title%></dd>
      <%= render :partial => 'pseuds/byline', :locals => {:form => f, :type => 'series'} -%>
    </dl>
  </fieldset>
  <fieldset>
    <dl>      
      <dt><%= f.label :summary, "Series Description" %><dt>
      <dd>
        <%= allowed_html_instructions -%>
        <%= f.text_area :summary %>
      </dd>
      <dd class="validation">
        <%= generate_countdown_html("series_summary", ArchiveConfig.SUMMARY_MAX) -%>
      </dd>
      <dt><%= f.label :notes, "Series Notes" %><dt>
      <dd>
        <%= allowed_html_instructions -%>
        <%= f.text_area :notes %>
      </dd>
      <dd class="validation">
        <%= generate_countdown_html("series_notes", ArchiveConfig.NOTES_MAX) -%>
      </dd>
    </dl>
  </fieldset>
  <fieldset>
    <p class="submit navigation">
    <%= f.submit "Update" %>
    <%= link_to 'Cancel', series_path %>
    </p>
  </fieldset>
<% end %>
</div>
<!--/content-->
