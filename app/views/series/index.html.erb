<% if @user %>
	<h2><%=h t('.owned_series', :default => "%{user_name}'s Series", :user_name => @user.login) %></h2>
  <% else %>
	<h2><%=h "View All Series" %></h2>
<% end %>


<!-- /descriptions-->

<!--subnavigation-->
	  <%= will_paginate @series, :prev_label =>  "&laquo; Previous",:next_label => "Next &raquo;" %>
