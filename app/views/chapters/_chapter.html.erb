<!-- This partial requires local variable 'chapter' -->
<div class="work-show <%= 'unposted-chapter' unless chapter.posted? %>">
<!-- chapter management -->  
  <%- if is_author_of?(@work) -%>
      <div class="navigation chapter-control">
        <% unless chapter.posted? -%>
          <span class="navitem"><%= link_to t('chapter_post', :default => 'Post Chapter'), [:post, @work, chapter], :method => :post -%></span>
        <%- end -%>
        <%- if @preview_mode and @preview_mode == true -%>
          <span class="navitem"><%= link_to t('chapter_revert', :default => 'Revert To Saved'), [:edit, @work, chapter] -%></span>
        <%- else -%>
          <span class="navitem"><%= link_to t('chapter_edit', :default => 'Edit Chapter'), [:edit, @work, chapter] -%></span>
        <%- end -%>
        <%- if @work.chapters.count > 1 -%>
          <span class="navitem"><%= link_to t('chapter_delete', :default => 'Delete Chapter'), [@work, chapter], :confirm => 'Are you sure?', :method => :delete %></span>
        <%- end -%>
      </div>
  <%- end -%>

<div class="preface chapter">
  <h3 class="title">
    <%= chapter_link(chapter) %>
    <%- unless chapter.title.blank? -%>: <%=h chapter.title %>
    <%- end -%>
  </h3>
<!-- only display byline if different from the main byline -->
  <%- if (chapter.pseuds != @work.pseuds) || @preview_mode -%>
    <h4 class="byline"><%=h t('chapter_chapter_by', :default => 'Chapter by') %> <%= byline(chapter) -%></h4>
  <%- end -%>
 
<!-- we want to hide this information by default if javascript is available -->
<%- if (@work.number_of_posted_chapters > 1) || @work.chaptered? -%>
  <%- unless chapter.summary.blank? -%>
  <blockquote class="summary">
    <h3><%=h t('chapter_summary', :default => 'Summary:') %></h3>
    <%=sanitize_and_format_for_display chapter.summary -%>
  </blockquote>
  <%- end -%>
  
  <%- unless chapter.notes.blank? && chapter.endnotes.blank? -%>
  <blockquote class="notes">
    <h3><%=h t('chapter_notes', :default => 'Notes:') %></h3>
    <%- if chapter.notes.blank? -%>
      <%= t('link_to_c_endnotes', :default => "See the end of the chapter for {{notes_link}}.", :notes_link => (link_to t('notes_link', :default => "notes"), :anchor => "chapter_#{chapter.position.to_s}_endnotes")) %>
    <%- else -%>
      <%=sanitize_and_format_for_display chapter.notes -%>
      <%- unless chapter.endnotes.blank? -%>
        <%= t('link_more_c_endnotes', :default => "See the end of the chapter for more {{notes_link}}.", :notes_link => (link_to t('notes_link', :default => "notes"), :anchor => "chapter_#{chapter.position.to_s}_endnotes")) %>
      <%- end -%>     
    <%- end -%> 
  </blockquote>
  <%- end -%>
<%- end -%> 
</div>
	
<%=sanitize_and_format_for_display chapter.content %>

<%- unless chapter.endnotes.blank? -%>
  <div class="preface chapter">
    <blockquote id="chapter_<%= chapter.position.to_s %>_endnotes" class="notes">
      <h3><%=h t('chapter_notes', :default => 'Notes:') %></h3>
      <%=sanitize_and_format_for_display chapter.endnotes -%>
    </blockquote>
  </div>
<%- end -%>
  

  
</div>