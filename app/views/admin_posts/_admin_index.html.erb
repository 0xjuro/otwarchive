<!--Descriptive page name, messages and instructions-->
<h2><%=h 'AO3 News (includes Release Notes)' %></h2>
<!--/descriptions-->
<!--subnav-->		
<%= render :partial => 'admin/admin_nav' %>
<!--/subnav-->

<!--main content-->
<div class="wrapper">
	<table summary="This table lists News posts by title, date posted and date updated, and lets you show, edit, and delete each post. You can also make a new post.">
	<caption>Manage News Postings</caption>
	<colgroup>
	<col class="name" />
	<col span="5" />
	</colgroup>
	<thead>
		<tr>
			<th scope="col"><%=h 'Title' -%></th>
			<th scope="col"><%=h 'Posted' -%></th>
			<th scope="col"><%=h 'Updated' -%></th>
			<th scope="col" colspan="3"><%=h 'Actions' -%></th>
		</tr>
	</thead>
	<tbody>	
  <% @admin_posts.each do |admin_post| %>
    <tr>
      <td><%= link_to sanitize_title_for_display(admin_post.title), admin_post %></td>
      <td><%=h admin_post.created_at %></td>
      <td><%=h admin_post.updated_at %></td>
      <td><%= link_to "Show", admin_post %></td>
      <td><%= link_to "Edit", edit_admin_post_path(admin_post) %></td>
      <td><%= link_to "Delete", admin_post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %> 
</tbody>
</table>
</div>
<!--/content-->
<!--subnav-->
  <%= will_paginate @admin_posts %>			
<!--/subnav-->
