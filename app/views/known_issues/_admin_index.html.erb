<%= render :partial => 'admin/admin_nav' %>

<h1><%= t("known_issues", :default => "Known Issues") -%></h1>
<%- if @known_issues.empty? -%>
<table>
	<tr>
		<td>
  		<%= link_to 'Create New Known Issues Post', new_known_issue_path %>
		</td>
	<tr>
</table>		
<% end %>
<% @known_issues.each do |known_issue| %>
  <div class="navigation">
    <span class="navitem"><%= link_to "Show", known_issue %></span>
    <span class="navitem"><%= link_to "Edit", edit_known_issue_path(known_issue) %></span>
    <span class="navitem"><%= link_to "Delete", known_issue, :confirm => 'Are you sure?', :method => :delete %></span>
  </div>
  <div id="tos" class="work-show">
    <h3><%= sanitize_and_format_for_display known_issue.title %></h3>
    <h6>Updated at: <%=h known_issue.updated_at %></h6>
    <%= sanitize_and_format_for_display known_issue.content %>
  </div>
<% end %>