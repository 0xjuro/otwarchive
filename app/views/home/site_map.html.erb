<h2><%= ts('Site Map') %></h2>
<div>
<h3>Explore</h3>
  <ul>
    <li><%= link_to ts("Homepage"), root_path %></li>
    <li><%= link_to ts("Fandoms"), media_path %></li>
    <li><%= link_to ts("Recent Works"), works_path %></li>
    <li><%= link_to ts("People"), people_path %></li>
    <li><%= link_to ts("Bookmarks"), bookmarks_path %></li>
    <li><%= link_to ts("Freeform Tag Cloud"), tags_path %></li>
    <li><%= link_to ts("Languages"), languages_path %></li>
    <li><%= link_to ts("Collections and Challenges"), collections_path %></li>
  </ul>

<h3>About the Archive of Our Own</h3>
  <ul>
    <li><%= link_to ts("Terms of Service"), tos_path %></li>
    <li><%= link_to ts("AO3 News"), admin_posts_path %></li>
    <li><%= link_to ts("Archive FAQ"), archive_faqs_path %></li>
    <li><%= link_to ts("Known Issues"), known_issues_path %></li>
    <li>The Archive of Our Own is a project of the <a href="http://transformativeworks.org"><acronym title="Organization for Transformative Works">OTW</acronym></a></li>
  </ul>

<% if logged_in? %>
  <h3>Create new works</h3>
  <ul>
    <li><%= link_to ts("Post New"), new_work_path %></li>
    <li><%= link_to ts("Import New"), new_work_path(:import => true) %></li>
  </ul>
  <h3>Access your account</h3>
  <ul>
    <li><%= link_to ts("My Home"), user_path(current_user) %></li>
    <li><%= link_to ts("My Works"), user_works_path(current_user) %></li>
    <li><%= link_to ts("My Drafts"), drafts_user_works_path(current_user) %></li>
    <li><%= link_to ts("My Series"), user_series_index_path(current_user) %></li>
    <li><%= link_to ts("My Bookmarks"), user_bookmarks_path(current_user) %></li>
    <li><%= link_to ts("My Signups"), user_signups_path(current_user) %></li>
    <li><%= link_to ts("My Assignments"), user_assignments_path(current_user) %></li>
    <li><%= link_to ts("My Collections and Challenges"), user_collections_path(current_user) %></li>
    <li><%= link_to ts("My Gifts"), user_gifs_path(current_user) %></li>
    <li><%= link_to ts("My Related works"), user_related_works_path(current_user) %></li>
    <li><%= link_to ts("My Inbox"), user_inbox_path(current_user) %></li>
    <% if current_user.preference.history_enabled? %>
    <li><%= link_to t('.my_history', :default =>"My History"), user_readings_path(current_user) %></li>
    <% end %>
    <li>My Subscriptions - coming soon</li>
  </ul>
  <h3>Change your account settings</h3>
  <ul>
    <li><%= link_to ts("Edit My Profile"), user_profile_path(current_user) %></li>
    <li><%= link_to ts("Change My Password"), user_change_password_path(current_user) %></li>
    <li><%= link_to ts("Edit My Preferences"), user_preferences_path(current_user) %></li>
    <li><%= link_to ts("Manage My Pseuds"), user_pseuds_path(current_user) %></li>
    <li><%= link_to ts("Manage My Skins"), user_skins_path(current_user) %></li>
    <li><%= link_to ts("Change My User Name"), user_change_username_path(current_user) %></li>
    <li><%= link_to ts("Orphan My Works"), new_orphan_path %></li>
  </ul>
<% else %>
  <h3>Account Management</h3>
  <ul>
    <li><%= link_to ts("Forgot your password?"), new_password_path %></li>
    <li><%= link_to ts("Request an Invitation"), '/invite_requests' %></li>
  </ul>
<% end %>

<h3>Contact Us</h3>
  <ul>
    <li><%= link_to ts("Support and Feedback"), new_feedback_report_path %></li>
    <li><%= link_to ts("Report Abuse"), new_abuse_report_path %></li>
  </ul>
</div>

