<!--Descriptive page name, messages and instructions-->
<h2><%= t('supported_languages', :default => 'The archive supports the following languages:') %></h2>
<!--/descriptions-->

<!--subnav, actions-->
<p>
<%- if current_user.is_a?(User) && current_user.is_translation_admin? -%>
  <%= link_to t('link_to_new', :default => 'Add a new one'), new_language_path %>
<%- else -%>
  <%= link_to t('suggest_language', :default => 'Suggest a new one!'), new_feedback_report_path %>
<%- end -%>
</p>
<!--/subnav-->

<!--main content-->
<h3 class="landmark">List of Languages and Number of Works</h3>
<dl id="languages_list">
  <%- for language in @languages -%>

    <%- if language == Language.default -%>
    <dt><%= language.name %></dt>
    <dd><%= link_to language.works.count, works_path %></dd>
    <%- else -%>
    <dt><%= link_to language.name, language %></dt>
    <dd><%= link_to language.works.count, language_works_path(language) %></dd>
    <%- end -%>
  <%- end -%>
</dl>
<!--main content-->

