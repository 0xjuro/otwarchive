<%- form_tag url_for(:controller => 'tags', :action => 'search'), :class => 'search', :method => :get do -%>
  <fieldset>
	<legend>Search tags</legend>
	<p><%= text_field_tag :query, params[:query], :id => 'tag_search' %>
  <%= select_tag :tag_type, options_for_select(%w(All Fandoms Characters Pairings Freeforms), params[:tag_type]) %> 
  <%= submit_tag "Search tags" %>
</p> 
</fieldset>
<%- end -%>