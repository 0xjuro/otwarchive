<h3>Standard Search</h3>
<%= render :partial => 'works/search_box' %>

<h3>Advanced Search (Extreme Beta)</h3>
<p class="system message">Please note, this is extreme beta, and is not working yet.</p>

<% form_tag 'search', :id => 'search', :method => :get do -%> 
	<fieldset>
		<legend>Searching with options</legend>
		<p class="work-restricted"><%= label :restricted, t('restricted_viewing', :default => "Only show your work to registered users") %> <%= link_to_help "registered-users" -%> <%= check_box_tag :restricted %>
	</p>
		<p><%= text_field_tag :query, params[:query], :class => 'text', :title => 'advanced search term' %>
	<%= submit_tag t('forms.advanced_search', :default => 'Advanced Search'), :class => 'button', :name => 'advanced_search_button' %>
	  <%= submit_tag t('forms.cancel', :default => 'Cancel'), :class => 'button', :name => 'cancel_button' %>
		</p>
	</fieldset>
<% end -%>
