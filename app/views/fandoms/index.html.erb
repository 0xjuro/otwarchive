<!--Descriptive page name, messages and instructions-->
<% if @collection %>
  <h2><%= h(ts("The %{count} Fandoms in ", :count => @fandoms.length)) + link_to(@collection.title, @collection) %></h2>
<% elsif @medium %>  
  <h2><%= link_to t('.fandoms', :default => 'Fandoms'), media_path %> > <%=h @medium.name %></h2>
<% else %>
  <h2><%= link_to t('.fandoms', :default => 'Fandoms'), media_path %></h2> 
<% end %>  
<!--/descriptions-->
<% unless @fandoms.blank? %>
<!--main content-->
  <% @fandoms.in_groups_of((@fandoms.length/3.0).ceil, false) do |fandom_list| %>  
  <ul class="fandoms index">
    <% for fandom in fandom_list %>
    <li>
      <% if fandom.respond_to?(:count) %>
      <%= link_to_tag_works_with_text(fandom, fandom.name + " (" + fandom.count.to_s + ")") %>
      <% else %>
      <%= link_to_tag_works_with_text(fandom, fandom.name) %>        
      <% end %>    
    </li>
    <% end %>
  </ul>
  <% end %>
 <!--/content--> 
<% end %>
