<fieldset>
  <dl>
    <dt><%= f.label :tag_id, ts("Tag: ") %></dt>
    <dd>
      <%= f.hidden_field :create_association, :value => true %>
      <%= f.select :tag_id, options_for_select(@child_tags_in_set, f.object.tag_id), :include_blank => true %>
    </dd>
    <dt><%= f.label :parent_tag_id, ts("Parent tag: ") %></dt>
    <dd><%= f.select :parent_tag_id, options_for_select(@parent_tags_in_set, f.object.parent_tag_id), :include_blank => true %></dd>
    <dt class="landmark">Cancel</dt>
    <!--FRONT END, DON'T FORGET TO READD SUBMIT AFTER SKINS-->
    <dd class="actions"><%= link_to_remove_section ts("Cancel"), f %></dd>
  </dl>
</fieldset>
