<% content_for :message do %>
  <% @commentables.each_with_index do |commentable, index| %>
    <% guest_count = @guest_count["#{commentable.id}"].to_i %>
    <% givers_list = @kudo_givers["#{commentable.id}"] %>
     <%= if !givers_list.nil?  then givers_list.each_with_index.map {|g,i| ( i == 0) ? g.capitalize : g}.to_sentence end %><%= if guest_count == 1 then t 'mailer.kudos.guest' end %><%= if guest_count > 1 then  guest_count t 'mailer.kudos.guests' end %> <%= t 'mailer.kudos.leftkudos' %> "<%= commentable.commentable_name.html_safe %>" (<%= polymorphic_url(commentable) %>).
     <% if (index < @commentables.length-1) %>
       <%= text_divider %>
     <% end %>
  <% end %>
<% end %>
