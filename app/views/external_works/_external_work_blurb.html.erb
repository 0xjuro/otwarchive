<li class="work" id="work_<%=h bookmarkable.id %>">
  <ul class="work">
    <li class="heading">
  <!-- We don't yet have tags on external works, so can't show work icons -->
    <ul class="required-tags">
      <%= get_symbols_for(bookmarkable) -%>
    </ul>
      <h3>
        <%= link_to bookmarkable.title, bookmarkable.url -%>
        <%=h t('bookmark_by', :default => 'by') %>
        <%= bookmarkable.author -%>
      </h3>
      <%- unless bookmarkable.tags.blank? %>
    <h4>
      <%- unless bookmarkable.fandom_tags.blank? -%>  
        <span class="bookmark-fandoms"><%= bookmarkable.fandom_tags.collect{|tag| link_to(tag.name, link_to_tag_bookmarks(tag)) }.join(', ') %></span>
      <%- end -%>
      <%- author_tags = bookmarkable.cast_tags
        unless author_tags.size < 1 -%>
          | <span class="bookmark-author-tags"><%= t('bookmark_author_tags', :default => 'Tags') %>: <%= author_tags.collect{|tag| link_to(tag.name, link_to_tag_bookmarks(tag)) }.join(', ') %></span>
        <%- end -%>
      <p style="margin-top: 0.5em"><%= t('external_work_warning', :default => 'Please note: this work is not hosted on the Archive; the information here may be incomplete or inaccurate.') %></p>
    </h4>
<%- end -%>  
    </li>
    <li class="summary">
      <%= sanitize_strip_images_and_format_for_display bookmarkable.summary %>
    </li>
    <%- if logged_in? -%>    
      <li>
        <%= bookmark_link(bookmarkable, true)%>
      </li>
    <%- end -%>       
		<%- if Bookmark.count_visible_bookmarks(bookmarkable) > 0 -%>
		  <li class="stats">
		    <dl>
          <dt><%=h t('work_bookmarks', :default => 'Bookmarks') + ': '%></dt>
			    <dd><%= link_to_bookmarkable_bookmarks(bookmarkable) -%></dd>
		    </dl>
	    </li>
    <%- end -%>     
	</ul>
</li>