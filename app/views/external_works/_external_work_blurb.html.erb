<li class="work blurb" id="work_<%= bookmarkable.id %>">
  <div class="header module">
  <!-- We don't yet have tags on external works, so can't show work icons -->
    <h4>
      <%= link_to external_work.title, external_work.url %>
      <%= ts("by") %>
      <%= external_work.author %>
    </h4>
    <% unless external_work.tags.blank? %>
    <h5>
      <% unless external_work.fandom_tags.blank? %>  
        <!-- FRONT END: these are not lists so I have not taken out the comma but noting in case they should be converted -->
        <span class="bookmark-fandoms"><%= external_work.fandom_tags.collect{|tag| link_to(tag.name, link_to_tag_bookmarks(tag)) }.join(', ').html_safe %></span>
      <% end %>
      <% author_tags = external_work.cast_tags
        unless author_tags.size < 1 %>
          | <span class="bookmark-author-tags"><%= ts("Tags") %>: <%= author_tags.collect{|tag| link_to(tag.name, link_to_tag_bookmarks(tag)) }.join(', ').html_safe %></span>
        <% end %>
      <p style="margin-top: 0.5em"><%= ts("Please note: this work is not hosted on the Archive; the information here may be incomplete or inaccurate.") %></p>
    </h5>
    <%= get_symbols_for(external_work) %>
    <% end %>  
  </div>
  <ul class="work">
    <li class="summary">
      <blockquote class="userstuff"><%=raw strip_images(sanitize_field(external_work, :summary)) %></blockquote>
    </li>
    <% if logged_in? %>          
      <li><%= render "bookmarks/bookmark_blurb_form", :bookmarkable => external_work %></li>
    <% end %>       
		<% if Bookmark.count_visible_bookmarks(external_work) > 0 %>
		  <li class="stats">
		    <dl>
          <dt><%= ts("Bookmarks") + ": " %></dt>
			    <dd><%= link_to_bookmarkable_bookmarks(external_work) %></dd>
		    </dl>
	    </li>
    <% end %>     
	</ul>
</li>