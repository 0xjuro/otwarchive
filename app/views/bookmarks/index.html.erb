<%= taggable_list(params[:tag_id], "bookmarks") if params[:tag_id] -%>

<%- if @most_recent_bookmarks -%>
  <h1>Bookmarks saved in the last month</h1>
<%- else -%>
  <h1><%=h t('listing', :default => 'Listing bookmarks') %></h1>
<%- end -%>

<% if @user && current_user && current_user == @user %>
<div class="navigation">
  <span class="navitem"><%= link_to t('add_new', :default => "Add A New Bookmark"), new_external_work_path %></span>
</div>
<% end %> 

<div class="navigation">
  <span class="navitem"><%= toggle_recs_bookmarks %></span>
</div>

<ul class="work-list bookmark" id="bookmarks">
	<%= render :partial => 'bookmarks/bookmarks' %>
</ul>

<div id="dynamic-bookmark" style="display:none;">	
</div>

<div class="pagination">
	  <%= will_paginate @bookmarks, :prev_label =>  "&laquo; " + t('pagination.previous', :default => "Previous"), :next_label => t('pagination.next', :default => "Next") + " &raquo;" %>
</div>
