<!-- BEGIN header -->
<div id="header">
     <div id="login-block">
    <%- if logged_in? || logged_in_as_admin? -%>
      <%= render :partial => 'session/greeting' -%>
    <% else -%>
      <ul id="greeting" class="logged-out">
        <li>
  		    <%= render :partial => 'session/login' -%>
          <a id='signin_closed' onclick='toggleLogin("signin")' style='display:none;'><%=h t('layout.header.sign_in', :default => 'Sign in') %></a>
          <a id='signin_open' onclick='toggleLogin("signin")'><%=h t('links.cancel', :default => 'Cancel') %></a>
		    </li>
      </ul>
    <% end -%>
    <%= render :partial => 'works/search_box' %>
  </div>
  <h1><%= link_to ArchiveConfig.APP_NAME, root_path %>
    <% unless ArchiveConfig.REVISION.blank? %>(BETA <%=h t('revision', :default => 'rev. {{rev_number}}', :rev_number => ArchiveConfig.REVISION) %>)<% end %>
  </h1>
  
  <ul id="main-navigation">
		<li><%- if (logged_in? and current_page?(user_path(current_user))) or current_page?(root_path) -%><span class="current"><%- end -%>
      <%= home_link %>
    <%- if (logged_in? and current_page?(user_path(current_user))) or current_page?(root_path) -%></span><%- end -%></li>
	  <li><%- if current_page?(works_path) -%><span class="current"><%- end -%>
      <%= link_to_unless_current t('layout.header.works', :default => "works"), works_path %>
    <%- if current_page?(works_path) -%></span><%- end -%></li>
    <li><%- if current_page?(media_path) -%><span class="current"><%- end -%>
      <%= link_to_unless_current t('layout.header.fandoms', :default => "fandoms"), media_path %>
    <%- if current_page?(media_path) -%></span><%- end -%></li>
    <li><%- if current_page?(people_path) -%><span class="current"><%- end -%>
      <%= link_to_unless_current t('layout.header.people', :default => "people"), people_path %>
    <%- if current_page?(people_path) -%></span><%- end -%></li>
    <li>
      <%= link_to_help "coming-soon", t('layout.header.communities', :default => "collections") %>
    </li>
    <li><%- if current_page?(bookmarks_path) -%><span class="current"><%- end -%>
      <%= link_to_unless_current t('layout.header.recs', :default => "bookmarks"), bookmarks_path %>
    <%- if current_page?(bookmarks_path) -%></span><%- end -%></li>
    <li><%- if current_page?(tags_path) -%><span class="current"><%- end -%>
      <%= link_to_unless_current t('layout.header.tags', :default => "tags"), tags_path %>
    <%- if current_page?(tags_path) -%></span><%- end -%></li>
    
    <%- if logged_in_as_admin? -%>
      <%= render :partial => 'admin/header' -%>
    <%- end -%>
  </ul>
  <div class="clear"></div>
</div>

<!-- END header -->

