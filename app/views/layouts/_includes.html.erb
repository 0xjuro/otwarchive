<%- unless params[:style] == 'light' || (current_user.is_a?(User) && current_user.preference.try(:always_light_style) && params[:style] != 'creator') -%>
  <%= stylesheet_link_tag 'font', :media => 'screen' %>
<%- end -%>
<%= stylesheet_link_tag 'archive_core', :media => 'all' %>
<%= stylesheet_link_tag 'system-messages', :media => 'screen' %>
<%= stylesheet_link_tag 'site-chrome', :media => 'screen' %>
<%= stylesheet_link_tag 'forms', :media => 'screen' %>
<%= stylesheet_link_tag 'user-generated-views', :media => 'all' %>
<%- if controller.controller_name == 'home' && params[:action] == 'index' -%> 
  <%= stylesheet_link_tag 'home', :media => 'screen' %>
<%- end -%>
<%- if controller.controller_name == 'translations' || controller.controller_name == 'translation_notes' -%>
  <%= stylesheet_link_tag 'translations', :media => 'screen' %>
<%- end -%>
<%= logged_in_as_admin? ? (stylesheet_link_tag 'admin', :media => 'screen') : "" %>

<%= stylesheet_link_tag 'handheld', :media => 'handheld' %>
<%= stylesheet_link_tag 'aural', :media => 'speech' %>
<%= stylesheet_link_tag 'print', :media => 'print' %>
<!--plugins-->
<%= stylesheet_link_tag 'globalize', :media => 'screen' %>
<%= stylesheet_link_tag 'live_validation', :media => 'screen' %>
<%= stylesheet_link_tag 'auto_complete', :media => 'screen' %>
<%= stylesheet_link_tag 'visualize.jQuery', :media => 'screen' %>

<%- if current_user.is_a?(User) && current_user.preference.try(:plain_text_skin) -%>
  <%= stylesheet_link_tag 'plain_text_skin', :media => 'all' %>
<%- end -%>

<%- if params[:style] == 'light' || (current_user.is_a?(User) && current_user.preference.try(:always_light_style) && params[:style] != 'creator') -%>
  <style type="text/css">
  body {
  background-color: white;
  color: black !important;
  }
  </style>
<%- else -%>
  <%= stylesheet_link_tag 'ugv-style-creator', :media => 'all' %>
<%- end -%>

<!-- browser-specific stylesheets -->
<!--[if IE]>
<%= stylesheet_link_tag 'ie_overrides', :media => 'all' %>
<![endif]-->
<!--[if IE 5]>
<%= stylesheet_link_tag 'ie5_overrides', :media => 'all' %>
<![endif]-->
<!--[if IE 6]>
<%= stylesheet_link_tag 'ie6_overrides', :media => 'all' %>
<![endif]-->
<!--[if IE 7]>
<%= stylesheet_link_tag 'ie7_overrides', :media => 'all' %>
<![endif]-->
<!--[if IE 8]>
<%= stylesheet_link_tag 'ie8_overrides', :media => 'all' %>
<![endif]-->


<%- if current_user.is_a?(User) && current_user.preference.skin -%>
  <style type="text/css">
  <%= current_user.preference.skin.css %>
  </style>
<%- end -%>


<!-- yield :tinymce needs to be before the scriptaculous elements. See http://wiki.moxiecode.com/index.php/TinyMCE:Ruby_on_Rails for more information. -->
<%= yield :tinymce %>
<%= javascript_include_tag 'jquery-1.3.2.min.js' %>
<%= javascript_include_tag 'visualize.jQuery.js' %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'live_validation' %>
<%= javascript_include_tag 'accessible' %>

<%= yield :tinymce_init %>

<%= iboxify_page %>
