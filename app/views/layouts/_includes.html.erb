<!-- yield :tinymce needs to be before the scriptaculous elements. See http://wiki.moxiecode.com/index.php/TinyMCE:Ruby_on_Rails for more information. -->
<%= yield :tinymce %>
<%= javascript_include_tag 'jquery-1.3.2.min.js' %>
<%= javascript_include_tag 'visualize.jQuery.js' %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'live_validation' %>
<%= javascript_include_tag 'accessible' %>

<%= yield :tinymce_init %>

<%= iboxify_page %>

<%- if current_user.is_a?(User) && current_user.try(:preference).try(:skin) -%>
  <%- s = current_user.preference.skin -%>
  <style type="text/css">
    <%- if s.margin -%>#chapters {margin: auto <%= s.margin %>% 2.5em; padding: 0.5em <%= s.margin %>% 0;}<%- end -%>
    <%- if s.background_color || s.foreground_color || s.font || s.base_em -%>
    <%- bgcolor = s.background_color ? s.background_color : "#FFFEF9" -%>
      body	{background: <%= bgcolor %>; 
        color: <%= s.foreground_color ? s.foreground_color : "#222" %>; 
        font: <%= s.base_em ? s.base_em : "100" %>%/1.125 <%= s.font ? s.font : "'Lucida Grande', Verdana, Helvetica, Arial, sans-serif" %>;}
    <%- end -%>
    <%= current_user.preference.skin.css %>
  </style>
<%- end -%>
