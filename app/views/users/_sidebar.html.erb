<div id="dashboard" role="navigation">
<% prefix = @user == current_user ? "My " : "" %>
<ul role="navigation">
	<li><%= span_if_current prefix + "Dashboard", @user %></li>
	<li><%= span_if_current prefix + "Pseuds (#{@user.pseuds.count})", user_pseuds_path(@user) %></li>
	<%- if @user.pseuds.size > 1 -%>
	  <li class="pseud"><a onclick="subnav_view.toggle()" title="Switch Pseuds">
			<%= if current_page?(@user)

			      "Switch Pseuds"

			      else

			      @author ? @author.name + " &#8595;" :  @user.login + " &#8595;"

			      end %></a>
			<ul id="subnav">
  				<%= print_pseud_selector(@user.pseuds) %>
 				<li><a onclick="subnav_view.toggle()" style='cursor: pointer;' title="Close Pseud Switcher">Close</a></li>
			</ul>
	</li>
	<%- end -%>
	<li><%= @author ? print_pseud_works_link(@author) : print_works_link(@user) %></li>
	<%- if @user == current_user -%>
	<li><%= print_drafts_link(@user) -%></li>
 <%- end -%>
	<li><%= @author ? print_pseud_series_link(@author) : print_series_link(@user) %></li>
	<%- unless @user == User.orphan_account -%>
	<li><%= @author ? print_pseud_bookmarks_link(@author) : print_bookmarks_link(@user) %></li>
	<%- end -%>
	<li><%= span_if_current prefix + "Collections (#{@user.owned_collections.count})", user_collections_path(@user) %> </li>
	<li><%= span_if_current prefix + "Gifts (#{@user.gifts.select {|g| g.work.visible?}.count})", user_gifts_path(@user) %></li>
	<% if @user == current_user %>    
	<li><%= span_if_current "My Inbox (" + @user.unread_inbox_comments_count.to_s + ")", user_inbox_path(@user) %></li>
	<% if @user.preference.try(:history_enabled?) %>
	<li><%= span_if_current "My History", user_readings_path(@user) %></li>
	<% end %>
	<li><%= link_to_help "coming-soon", "My Subscriptions" %></li>
	<li><%= span_if_current "My Preferences", user_preferences_path(@user) %></li>
<% end %>
</ul>
</div>

