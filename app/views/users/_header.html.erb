<div id="user-header">
	<%-	display_name = @author ? @author.name : @user.login	-%>
	<h1><%= @author ? link_to_unless_current(display_name, user_pseud_path(user, @author)) : link_to_unless_current(display_name, user) %></h1>
	<h2><%= image_tag("icon_placeholder.png", :size => "100x100", :alt => "(Icon!)") %></h2>

  <div class="navigation">
    <span class="navitem"><%= link_to_unless_current("Profile", user_profile_path(user)) %></span>
    <%- if @user == current_user -%>
      <span class="navitem"><%= link_to 'Post New', new_work_path -%></span>
    <%- end -%>  
    <span class="navitem"><%= link_to_help "coming-soon", "Bookmark" %></span>
    <span class="navitem"><%= link_to_help "coming-soon", "Subscribe" %></span>
    <%- if @user == current_user && !@user.out_of_invites -%>
      <span class="navitem"><%= link_to 'Invite A Friend', user_invitations_path(user) %></span>
    <%- end -%>  
  </div>
</div>
