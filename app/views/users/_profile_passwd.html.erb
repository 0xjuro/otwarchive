  <dl id="passwd">
	  <dt><%= f.label :password, t('change_password', :default =>"Change Password") %></dt>
	  <dd><%= f.password_field :password %></dd>
		  
    <dt><%= f.label :password_confirmation, t('confirm_new', :default =>"Confirm New Password") %></dt>
	  <dd><%= f.password_field :password_confirmation %></dd>
		<% fields_for :check do |check| %>
			<dt><%= check.label :password_check, t('enter_old',:default =>"Please enter your old password") %></dt>
			<dd><%= check.password_field :password_check%></dd>
 		<% end %>
  </dl>