<!--main content-->
<%= form_for(@translation_note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :namespace %>
    <p><%= f.select :namespace, @namespaces, :selected => @current_namespace %></p>
  </p>
  <p>
    <%= f.label :note, 'Your notes:' %>
    <%= f.text_area :note %>
  </p>
  <p class="submit">
    <%= f.submit "Create" %>
  </p>
<% end %>
