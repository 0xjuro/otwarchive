<% if @collection && @collection.challenge %>
<% cache("signup_summary_#{@collection.id}") do %>

  <!-- signups for a given challenge -->
  <h2><%= ts("Signup Summary for %{collection}", :collection => @collection.title) %></h2>

  <% if @requested.empty? || @offered.empty? %>
    <p class="note"><%= ts("Not enough signup information to show.") %> </p>
  <% else %>
    <!-- render differently based on the challenge -->
    <%= render "challenge/#{challenge_class_name(@collection)}/challenge_signups_summary" %>
  <% end %>    

  
<% end %><!-- end of cache -->
<% end %>