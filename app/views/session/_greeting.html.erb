<%- if logged_in? -%>
  <p id="greeting">
      <%=h t('hi', :default => "Hi,") -%>&nbsp;<%= link_to current_user.login, user_path(current_user), :class => 'login' -%>!
    </p>
  <ul id="login">
    <li>
      <%= link_to t('post_new', :default => "Post New"), new_work_path -%>&nbsp;|
    </li>
	<li> 
	<%= link_to t('import', :default => "Import"), url_for(:controller => :works, :action => :new, :import => true) -%>	&nbsp;|
	</li>	
    <li>
      <%= link_to t('log_out', :default => "Log out"), logout_path -%>
    </li>
  </ul>
<% elsif logged_in_as_admin? -%>
  <ul id="greeting">
    <li>
      <span><%=h t('admin_hello', :default => "Hello,") -%></span>&nbsp;<%= link_to current_admin.login, admin_path(current_admin), :class => 'login login-admin' -%>!
    </li>
    <li>
      <%= link_to t('admin_log_out', :default => "Log out"), admin_logout_path -%>
    </li>
  </ul>
<%- end -%>