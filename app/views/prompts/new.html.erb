<ul class="navigation" role="navigation">
  <% if @prompt.challenge_signup %>
    <li><%= link_to ts('Edit whole signup instead?'), edit_collection_signup_path(@collection, @prompt.challenge_signup) %></li>
  <% end %>
  <li><%= link_to ts('Back to %{title}', :title => @collection.title), @collection %></li>
</ul>

<%= form_for :prompt, @prompt, :url => collection_prompts_path(@collection), :html => {:method => :post} do |form| %>
  <%= render "prompt_form", :form => form, :required => true %>
  
  <fieldset>
    <legend><%= 'Submit' %></legend> 
    <p class="submit"><%= form.submit ts('Submit') %></p>
  </fieldset>
  
<% end %>
