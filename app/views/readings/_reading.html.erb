<div class="module">
<% if reading.work.nil? %>
  <h3><%= t('deleted_work', :default => '(deleted work, last viewed {{date}})', :date => reading.updated_at) -%></h3>
<% else %>
<h3>
  <%= t('last_read', :default => '<span>Last viewed:</span> {{date}}', :date => set_format_for_date(reading.updated_at)) %> 
  <% if reading.major_version_read < reading.work.major_version -%>
    <%= t('new_version_available', :default => '(New version available.)') %>
  <% elsif reading.minor_version_read != reading.work.minor_version -%>
    <%= t('minor_edits', :default => '(Minor edits made since then.)') %>
  <% else -%>
    <%= t('most_recent_version', :default => '(Most recent version.)') %>
  <% end -%>	  
  </h3>
  <ul><%= render :partial => 'works/work_blurb', :locals => {:work => reading.work} %></ul>
<% end %>
</div>

