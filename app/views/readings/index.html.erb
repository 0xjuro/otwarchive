<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= ts('History') %></h2>
<!--/descriptions-->

<!--subnav-->
<% if logged_in? && !current_user.readings.empty? %>
<ul class="navigation actions" role="navigation">
  <li>
    <%= link_to ts("Saved For Later"), user_saved_works_path(@user) %>
  </li>
  <li>
    <%= link_to ts("Clear History"), clear_user_readings_path(current_user), :confirm => ts('Are you sure you want to clear your History? This cannot be undone!'), :method => :post %>
  </li>
</ul>
<% end %>
<!--/subnav-->

<!--main content-->
<h3 class="landmark heading"><%= ts("List of History Items") %></h3>
<% if logged_in? && @readings.present? %>
  <ol class="reading index">
    <% @readings.each do |reading| %>
      <%= render 'reading_blurb', :work => reading.work, :reading => reading %>
    <% end %>
  </ol>
<% end %>
<!--/content-->

<!--subnav-->
	  <%= will_paginate @readings %>
<!--/subnav-->
