<!--page description, messages-->
<% if @work.unrevealed? %>
<p class="message"><%= t('works.unrevealed', :default => "This work is part of an ongoing challenge, {{challenge}}, and will be revealed soon!",
    :challenge => @work.collections.unrevealed.collect {|challenge| link_to(challenge.title, collection_path(challenge))}.join(", ")) -%></p>
<% end %>
<!--/descriptions-->

<!--subnav-->
<%- if logged_in_as_admin? -%>
<%= render :partial => 'admin/admin_options', :locals => {:item => @work} %>
<%- end -%>
<!--/subnav-->

<% if !@work.unrevealed? || logged_in_as_admin? || is_author_of?(@work) %>
<!-- BEGIN work --> 
<p class="landmark"><a name="top">&nbsp;</a></p>
<!--work description, metadata, notes and messages-->
	<%= render :partial => 'works/work_header' -%>
	<%- if logged_in_as_admin? -%>
	<%= render :partial => 'admin/admin_options', :locals => {:item => @work} %>
	<%- end -%>

<!--/descriptions-->


<!--main content-->
	<div id="chapters" class="user-generated-view" role="article">
	<h3 class="landmark">Work Text:</h3>
	<%= render :partial => 'chapters/chapters' -%>
	</div>
<!--/main-->
 
 <%- unless @work.endnotes.blank? -%>
<!--work description, metadata, notes and messages-->
    <div class="preface" role="complementary">
      <div id="work_endnotes" class="footnotes">
        <h3><%=h t('notes', :default => "Notes:") %></h3>
        <blockquote class="user-generated-view"><%=sanitize_and_format_for_display @work.endnotes %></blockquote>
      </div>
    </div>
  <%- end -%>
<!-- /descriptions-->

<!--subnav-->
  <%- unless @work.series.blank? -%>
    <%= render :partial => 'works/series_links' -%>
  <%- end -%>
	<%= render :partial => 'works/work_footer' -%>
<!--/subnav-->

<!-- END work -->

<!-- BEGIN comment section -->
<%= render :partial => 'comments/commentable', :locals => {:commentable => @work} %>
<!-- END comment section -->
<% end -%>
