<%- if logged_in_as_admin? -%>
<%= render :partial => 'admin/admin_options', :locals => {:item => @work} %>
<%- end -%>

<% if @work.unrevealed? %>
<h3><%= t('works.unrevealed', :default => "This work is part of an ongoing challenge, {{challenge}}, and will be revealed soon!",
    :challenge => @work.collections.unrevealed.collect {|challenge| link_to(challenge.title, collection_path(challenge))}.join (", ")) -%></h3>
<% end %>

<% if !@work.unrevealed? || logged_in_as_admin? || is_author_of?(@work) %>

<!-- BEGIN work --> 
<div class="work-show"><a name="top">&nbsp;</a>
	<%= render :partial => 'works/work_header' -%>
	<%- if logged_in_as_admin? -%>
	<%= render :partial => 'admin/admin_options', :locals => {:item => @work} %>
	<%- end -%>
	<div id="chapters">
	<%= render :partial => 'chapters/chapters' -%>
	</div>
  <%- unless @work.endnotes.blank? -%>
    <div class="preface">
      <blockquote id="work_endnotes" class="notes">
        <h3><%=h t('notes', :default => "Notes:") %></h3>
        <%=sanitize_and_format_for_display @work.endnotes %>
      </blockquote>
    </div>
  <%- end -%>
  <%- unless @work.series.blank? -%>
    <%= render :partial => 'works/series_links' -%>
  <%- end -%>
	<%= render :partial => 'works/work_footer' -%>
  <div id="link-to-top"><%= link_to image_tag("arrow-up.gif") + t('works_top_link_text', :default => "top"), work_path(@work, :anchor => "top")%></div>
</div>
<!-- END work -->

<!-- BEGIN comment section -->
<%= render :partial => 'comments/commentable', :locals => {:commentable => @work} %>
<!-- END comment section -->
<% end -%>
