<%= form_for @search, :url => search_works_path, :html => {:method => :get, :class => 'search'} do |f| %>
  <fieldset>
    <legend>Work Info</legend>
    <dl>
      <dt><%= f.label :query, ts('Any field') %></dt>
      <dd><%= f.text_field :query %></dd>
      
      <dt><%= f.label :title, ts('Title') %></dt>
      <dd><%= f.text_field :title %></dd>
      
      <dt><%= f.label :byline, ts('Author') %></dt>
      <dd><%= f.text_field :byline %>
        
      <dt><%= f.label :revised_at, ts('Date') %></dt>
      <dd><%= f.text_field :revised_at %></dd>
      
      <dt><%= f.label :complete, ts('Complete') %></dt>
      <dd><%= f.check_box :complete %></dd>
      
      <dt><%= f.label :language_id, ts('Language') %></dt>
      <dd><%= f.collection_select :language_id, @languages, :id, :name, :prompt => true %>
    </dl>
  </fieldset>
  
  <fieldset>
    <legend>Work Tags</legend>
    <dl>
      <dt><%= f.label :fandom_names, ts('Fandoms') %></dt>
      <dd><%= f.text_field :fandom_names, autocomplete_options("fandom") %></dd>
      
      <dt><%= f.label :rating_ids, ts('Rating') %></dt>
      <dd><%= f.collection_select :rating_ids, Rating.canonical, :id, :name, :prompt => true %></dd>
      
      <dt><%= f.label :warning_ids, ts('Warnings') %></dt>
      <dd><%= f.text_field :warning_ids %></dd>
      
      <dt><%= f.label :category_ids, ts('Categories') %></dt>
      <dd><%= f.text_field :category_ids %></dd>
      
      <dt><%= f.label :character_names, ts('Characters') %></dt>
      <dd><%= f.text_field :character_names, autocomplete_options("character") %></dd>
      
      <dt><%= f.label :relationship_names, ts('Relationships') %></dt>
      <dd><%= f.text_field :relationship_names, autocomplete_options("relationship") %></dd>
      
      <dt><%= f.label :freeform_names, ts('Additional tags') %></dt>
      <dd><%= f.text_field :freeform_names, autocomplete_options("freeform") %></dd>
      
    </dl>
  </fieldset>
  
  <fieldset>
    <legend>Work Stats</legend>
    <dl>
      <dt><%= f.label :word_count, ts('Words') %></dt>
      <dd><%= f.text_field :word_count %></dd>
      
      <dt><%= f.label :hits, ts('Hits') %></dt>
      <dd><%= f.text_field :hits %></dd>
      
      <dt><%= f.label :kudos_count, ts('Kudos') %></dt>
      <dd><%= f.text_field :kudos_count %>

      <dt><%= f.label :comments_count, ts('Comments') %></dt>
      <dd><%= f.text_field :comments_count %>

      <dt><%= f.label :bookmarks_count, ts('Bookmarks') %></dt>
      <dd><%= f.text_field :bookmarks_count %>

    </dl>
  </fieldset>
  
  <fieldset>
    <legend>Search</legend>
    <%= f.submit ts('Search') %>
  </fieldset>
  
<% end %>
