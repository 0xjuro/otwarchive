<%= form_for @search, :url => search_works_path, :html => {:method => :get, :class => 'search'} do |f| %>
  <fieldset>
    <legend>Work Info</legend>
    <dl>
      <dt><%= f.label :query, ts('Any field') %></dt>
      <dd><%= f.text_field :query %></dd>
      
      <dt><%= f.label :title, ts('Title') %></dt>
      <dd><%= f.text_field :title %></dd>
      
      <dt><%= f.label :byline, ts('Author') %></dt>
      <dd><%= f.text_field :byline %>
    </dl>
  </fieldset>
  
  <fieldset>
    <legend>Search</legend>
    <%= f.submit ts('Search') %>
  </fieldset>
  
<% end %>
