<%- form_for(@work, :html => {:name => "storyForm"}) do |f| -%> 
<p class="message">Please use this form to upload new work via the HTML or Rich Text editors. Use the <%= link_to 'Import Form', url_for(:controller => :works, :action => :new, :import => true) -%> to import works from an existing URL.</p>
  <p class="notice required"><%=h t('required', :default => '* Required information') %></p>
  <%= render :partial => 'work_tags_form', :locals => {:include_blank => false} -%>
  <fieldset>
    <legend><%= 'Work Preface' -%></legend>
    <dl class="preface">
      <dt class="work-title">
        <%= f.label :title, t('add_title', :default => "Add Title*"), :class => "required" %>
		<%= link_to_help "story-title" -%>
      </dt>
      <dd class="work-title">
        <%= f.text_field :title, :class => "storyinputfield" %>
        <%= live_validation_for_field('work_title', 
				      :maximum_length => ArchiveConfig.TITLE_MAX, :minimum_length => ArchiveConfig.TITLE_MIN, 
				      :failureMessage => 'We need a title! (At least ' + ArchiveConfig.TITLE_MIN.to_s + ' characters long, please.)')
        -%>
        <%= generate_countdown_html("work_title", ArchiveConfig.TITLE_MAX) -%>
      </dd>
      
      <!-- Add coauthors-->
      <%= render :partial => 'pseuds/byline', :locals =>{:form => f, :type => 'work'} %>
      
      <!-- Add collection -->
      <dt class="collection">
        <%= f.label :collection_names, t('collection_names', :default => "Post to collection(s): ") -%> <%= link_to_help "add-work-to-collection" -%>
      </dt>
      <dd class="collection">
        <%= f.text_field :collection_names -%>
        <div class="auto_complete" id="work_collection_names_auto_complete" ></div>
        <%= javascript_tag("new Autocompleter.Local('work_collection_names', 'work_collection_names_auto_complete', #{Collection.open.map(&:name).sort.to_json}, {fullSearch: true, tokens: ','});") %>
      </dd>

      <dt class="recipient">
        <%= f.label :recipients, t('recipients', :default => "Recipient(s): (if this story is a gift)") -%> <%= link_to_help "recipients" -%>
      </dt>
      <dd class="recipient">
        <%= f.text_field :recipients -%>
        <div class="auto_complete" id="work_recipients_auto_complete" ></div>
        <%= javascript_tag("new Autocompleter.Local('work_recipients', 'work_recipients_auto_complete', #{(Pseud.all.map(&:byline) | ExternalAuthorName.all.map(&:name)).sort.to_json}, {fullSearch: true, tokens: ','});") %>
      </dd>
      
      <dt class="summary">
        <%= f.label :summary, t('summary', :default =>"Summary (max " + ArchiveConfig.SUMMARY_MAX.to_s + " characters)") %>
      </dt>
      <dd class="summary">
        <%= f.text_area :summary, :rows => 4, :cols => 60, :class => "summary-field" %>
        <%= live_validation_for_field('work_summary', :presence => false, :maximum_length => ArchiveConfig.SUMMARY_MAX) -%>
        <%= generate_countdown_html("work_summary", ArchiveConfig.SUMMARY_MAX) -%>
      </dd>
    </dl>
    
      <p class="label"><%=h t('add_notes', :default => "Add notes:") -%></p>    
     <dl class="preface">
      <dt class="work-endnotes">
        <%= f.label :storynotescheck, t('beginning_notes', :default => "at the beginning") %> 
      </dt>
      <dd class="work-endnotes">
       <input type="checkbox" id="storynotescheck" name="storynotescheck" onclick="showNotesOptions('work')" <%- unless @work.notes.blank? -%> checked="checked" <%- end -%> />   
       <span id="worknoteswarning" class="warning" <%- if @work.notes.blank? -%> style="display: none" <%- end -%>>
       <%=h t('worknotes_warning', :default =>"Warning: Unchecking this box will delete any existing beginning note.") %></span>
      </dd>
      <dd id="worknotesoptions" class="work-endnotes optionalField">
        <dl>
          <dt class="notes">
            <%= f.label :notes, "Notes (max " + ArchiveConfig.NOTES_MAX.to_s + " characters)" %>
          </dt>
          <dd class="notes">
            <%= f.text_area :notes, :rows => 4, :cols => 60, :class => "notes-field" %>
            <%= live_validation_for_field('work_notes', :presence => false, :maximum_length => ArchiveConfig.NOTES_MAX) -%>
            <%= generate_countdown_html("work_notes", ArchiveConfig.NOTES_MAX) -%>
          </dd>
        </dl>
      </dd>
      
      <dt class="work-endnotes">
      <%= f.label :storyendnotescheck, t('end_notes', :default => "at the end") %> 
      </dt>
      <dd class="work-endnotes">
       <input type="checkbox" id="storyendnotescheck" name="storyendnotescheck"  onclick="showEndnotesOptions('work')" 
       <%- unless @work.endnotes.blank? -%>checked="checked"<%- end -%>/>
        <span id="workendnoteswarning" class="warning" <%- if @work.endnotes.blank? -%> style="display: none" <%- end -%>>
       <%=h t('workendnotes_warning', :default =>"Warning: Unchecking this box will delete any existing end note.") %></span>
      </dd>
    <dd id="workendnotesoptions" class="work-endnotes optionalField">
        <dl>
          <dt class="notes">
            <%= f.label :notes, "Notes (max " + ArchiveConfig.NOTES_MAX.to_s + " characters)" %>
          </dt>
          <dd class="notes">
            <%= f.text_area :endnotes, :rows => 4, :cols => 60, :class => "notes-field" %>
            <%= live_validation_for_field('work_endnotes', :presence => false, :maximum_length => ArchiveConfig.NOTES_MAX) -%>
            <%= generate_countdown_html("work_endnotes", ArchiveConfig.NOTES_MAX) -%>
          </dd>
        </dl>
      </dd>
      
    </dl>
  </fieldset>

<fieldset id="associations">
  <legend><%=h 'Associations' -%></legend>

  <dl>
    <!-- Inspiration / remix -->
    <dt class="work-parent">
      <%= f.label :parent_url, t('remix_or_inspired', :default => "If your story is a remix or was inspired by another story in the archive, copy and paste that story's url below:") %>
    </dt>
    <dd class="work-parent">
      <%= f.text_field :parent_url, :value => @work.url_for_parent, :live => true %>
    </dd>

    <!-- Privacy dropdown (storyprivacy) -->
    <dt class="work-restricted">
      <%= f.label :restricted, t('restricted_viewing', :default => "Only show your work to registered users") %> <%= link_to_help "registered-users" -%>
    </dt>
    <dd class="work-restricted">
      <%= f.check_box :restricted %>
    </dd>

    <!-- Series checkbox (storyseriescheck) -->
    <!-- Checking this box causes the "manage series" dropdown to appear; unchecking it causes it to disappear. -->
    <dt class="work-is_serial">
      <%= f.label :storyseriescheck, t('part', :default => "Is this part of a series?") %> 
    </dt>
    <dd class="work-is_serial">
       <input type="checkbox" id="storyseriescheck" name="storyseriescheck"  onclick="showWorkSeriesOptions()" 
       <%- unless @work.series.blank? -%>checked="checked"<%- end -%>/>
    </dd>
    
    <!-- Toggles on with series checkbox -->
    <dd id="seriesmanage">
      <fieldset>
        <legend><%= 'Manage Series' -%></legend>
        <dl>
          <% fields_for "work[series_attributes]" do |s| %>
            <dt><%= s.label 'series_id', 'Choose one of your existing series:' %>  <%= link_to_help "choosing-series" -%></dt>
            <dd>
              <%= s.collection_select(:id, @series, :id, :title, {:prompt => true}) %>	  
            </dd>
            <dt><%= s.label :title, "Or add a new one:" %></dt>
            <dd><%= s.text_field :title, :class => "storyinputfield" %></dd>
      	  <%- end -%>
        	
          <%- unless @serial_works.blank? -%>
            <dt><%= 'Current Series' -%></dt>
            <%- for serial in @serial_works -%>
              <dd>
                <div class="navigation">
                  <span class="navitem"><%= link_to serial.series.title, serial.series %></span> 
                  <span class="navitem"><%= link_to 'Remove', serial, :confirm => 'Are you sure?', :method => :delete %></span>
                  <span class="navitem"><%= link_to 'Delete', serial.series, :confirm => 'Are you sure?', :method => :delete %></span>
                </div>
              </dd>
            <%- end -%>
      	  <%- end -%>          
        </dl>
      </fieldset> 
    </dd>
    
  <% fields_for_associated('work', @chapter) do |c| %>
    <!-- Chaptered checkbox (work_is_wip) -->
    <!-- Checking this box causes the expected number of chapters box to appear; unchecking it causes it to disappear. -->
    <dt class="work-is_wip">
      <%= f.label :iswip, t('multiple_chapters', :default =>"Does this work have multiple chapters?") %>
    </dt>
    <dd class="work-is_wip">
      <input type="checkbox" id="iswip" name="isWip"  
       onclick="showChapteredStoryOptions()" <%- if @work.chaptered? -%>checked="checked"<%- end -%>/>
    </dd>        
    <dd id="number-of-chapters">
    <p>
      <%=h 'Chapter 1 of' %> <%= f.text_field :wip_length, :class => "number-field" %> 
      <%=h 'Title:' %>
      <%=
      if @chapter != nil
        c.text_field :title, :value => @chapter.title
      else
        c.text_field :title
      end
      %>
    </p>
    </dd>
    
    <!-- User-facing dates -->
    <dt class="work-is-backdated">
      <%= c.label :published_at, t('change_pub_date', :default => "Set a different publication date") %> <%= link_to_help "backdating-help" -%>
    </dt>
    <dd>
      <input type="checkbox" id="publicationdatecheck" onclick="showBackdateOptions()" <%= check_backdate_box(@work, @chapter) %> />
    </dd>
    <dd id="publicationdateoptions" class="optionalField">
        <p id="managePublicationDate">
      <%= c.date_select("published_at", :start_year => Date.today.year, :end_year => 1950, :default => Date.today, :value => @chapter.published_at, :order => [:day, :month, :year]) %>   
	</p>
        <dl>
            <dt class="work-is-backdated">
              <%= f.label :backdate, "Set this publication date for the entire work" %>
            </dt>
            <dd class="work-is-backdated">
              <%= f.check_box :backdate %>
            </dd>
        </dl>
    </dd>
    <dt class="work-language">
      <%= f.label :language_id, t('choose_language', :default => "Choose a language") %><%= link_to_help "languages-help" -%>
    </dt>
    <dd>
      <select id="work_language_id" name="work[language_id]">
        <%= options_from_collection_for_select(Language.all(:order => :short), :id, :name, @work.language_id || Language.default.id) %>
      </select>
    </dd>
    
  </dl>         

</fieldset>

<!-- Story text field (chapter_attributes_content) -->
<fieldset>
  <legend><%= 'Story Text' -%></legend>
  <p class="label"><%= c.label :content, t('story_text', :default => "Story text"), :class => "required" %></p>
  <div id="toggleText">
  <p id="plainTextNotes" style="display: block"><%=h t('plain_text', :default =>"Plain text with limited html") %> <%= link_to_help "html-help" -%><br/><code>a, abbr, acronym, address, alt, b, big, blockquote, br, caption, center, cite, class, code, col, colgroup, datetime, dd, del, dfn, div, dl, dt, em, h1, h2, h3, h4, h5, h6, height, hr, href, i, img, ins, kbd, li, name, ol, p, pre, q, samp, small, span, src, strike, strong, sub, sup, table, tbody, td, tfoot, th, thead, title, tr, tt, u, ul, var, width</code></p>
  <p id="richTextNotes" style="display: none"><%=h t('rich_text_notes', :default => "Type or paste formatted text. Select the icon to the far left (clipboard with a 'W') to paste documents from Microsoft Word.") %></p>
  </div>
  <% use_tinymce -%>
  <p class="rtf-html-switch">
    <span id="richTextLink" style="display: inline"><a href="javascript:addEditor('content');javascript:toggle();"><%=h 'Rich text' %></a></span>
    <span id="plainTextLink" style="display: none"><a href="javascript:removeEditor('content');javascript:toggle();"><%=h 'HTML' %></a></span>
  </p>      
  
  <div class="rtf-html-field">
  <%= 
    if @chapter != nil
      c.text_area :content, :value => @chapter.content, :class => "mce-editor", :id => "content"
    else
      c.text_area :content, :class => "mce-editor", :id => "content"
    end
  %>
  <%= live_validation_for_field('content', 
      :maximum_length => ArchiveConfig.CONTENT_MAX, :minimum_length => ArchiveConfig.CONTENT_MIN, 
      :tooLongMessage => t('validations.content.too_long', :default => 'We salute your ambition! But sadly the content must be less than {{max}} characters long. (Maybe you want to create a multi-chaptered work?)', :max => ArchiveConfig.CONTENT_MAX.to_s),
      :tooShortMessage => t('validations.content.too_short', :default => 'Brevity is the soul of wit, but your content does have to be at least {{min}} characters long.', :min => ArchiveConfig.CONTENT_MIN.to_s),
      :failureMessage => t('validations.content.too_short', :default => 'Brevity is the soul of wit, but your content does have to be at least {{min}} characters long.', :min => ArchiveConfig.CONTENT_MIN.to_s))
  -%>
  <%= generate_countdown_html("content", ArchiveConfig.CONTENT_MAX) -%>
  </div>      
</fieldset>



  <%- end -%> <!-- end of fields_for_associated -->

  <fieldset>
    <legend><%= 'Post Work' -%></legend>
    <p class="submit">
      <%= submit_tag 'Preview', :name => 'preview_button' %>
      <%= submit_tag 'Cancel', :name => 'cancel_button' %>
    </p> 
  </fieldset>
<%- end -%> <!-- end of form_for -->
