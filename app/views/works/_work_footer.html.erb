<!-- footer for work -->

  <%- unless @work.approved_children.blank? -%>
  <div id="children" class="module">
    <h4><%=h t('inspired_by_this', :default => 'Works inspired by this one:') -%></h4>
    <ul>
    <%- for child in @work.approved_children -%>
      <li>
        <%= link_to child.title, child %> by <%= byline(child) %> 
        <%- if is_author_of?(@work) -%>
          <h5 class="inline"><%= link_to t('remove_relationship', :default => '[Remove link]'), {:controller => :related_works, :action => :update, :parent_id => @work.id, :work_id => child.id}, :method => :put %>
        <%- end -%>
      </li>
    <%- end -%>
    </ul>
  </div>
  <%- end -%>
<!-- end of footer for work -->
