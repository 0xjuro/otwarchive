<div class="header module mystery">
	<h4 title="title"><%= t('works.anonymous', :default => "Mystery Work") %></h4>
	<h5><%= t('works.part_of', :default => "Part of: {{collections}}", :collections => work.collections.anonymous.map {|challenge| link_to(challenge.title, collection_path(challenge))}.join(", ")) %></h5>
	</div>
	<h6 class="landmark">Summary</h6>
	<blockquote class="user-generated-view summary" title="summary">
	<%= t('works.anonymous_reveal', :default => "This work is part of an ongoing anonymous challenge. You can read the stories in the challenge now, and the authors will be revealed soon.") %>
	</blockquote>
