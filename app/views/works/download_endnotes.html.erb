<div class="preface" role="complementary">
  <% unless @work.endnotes.blank? %>
    <div id="work_endnotes" class="footnotes">
      <h3><%= ts("Notes:") %></h3>
      <blockquote class="userstuff"><%=raw sanitize_field(@work, :endnotes) %></blockquote>
    </div>
  <% end %>
  <!-- /descriptions-->

  <!--subnav-->
  <% @series.each do |s| %>
    <p>
      <% if (s.visible_work_count > 1) %>
        <%= ts("There are more works in") %>
        <a href="<%= "#{ArchiveConfig.APP_URL}/series/#{s.id}/" %>"><%= s.title %></a>
        <%= ts("on the") %>
        <a href="<%= ArchiveConfig.APP_URL %>"><%= ArchiveConfig.APP_NAME %></a>
      <% end %>
    </p>
  <% end %>
  <!--/subnav-->

  <%= render :partial => 'works/work_footer.html' %>

</div>
<p class="message">
  <%= ts("Please") %>
  <a href="<%= "#{ArchiveConfig.APP_URL}/works/#{@work.id}/comments/new" %>"><%= ts("drop by the archive and comment") %></a>
  <%= ts("to let the author know if you enjoyed their work!") %>
</p>
<!-- END work -->
