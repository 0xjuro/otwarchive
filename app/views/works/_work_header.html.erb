<div class="work-date-info">
  <%= work_meta_list(@work) %>
  <%= work_top_links_list(@work) %>
</div>

<!-- BEGIN navigation -->
<%- unless @preview_mode -%>
  <% if is_author_of?(@work) -%>
    <div class="navigation">
      <span class="navitem"><%= link_to t('add_chapter', :default => "Add Chapter"), new_work_chapter_path(@work) %></span>
      <span class="navitem"><%= link_to t('edit', :default => "Edit"), edit_work_path(@work) %></span>
      <span class="navitem"><%= link_to t('delete', :default => "Delete"), @work, :confirm => "Are you sure?", :method => :delete -%></span>
    </div>
  <% end -%>
<%- end -%>
<!-- END navigation -->

<%= render :partial => 'works/meta', :locals => {:work => @work} %>
  <div class="series-and-view-data">
    <%- unless @work.series.blank? -%>
      <ul class="work-series-data">
        <%= show_series_data(@work) %>
      </ul>
    <%- end -%> 
    
    <%- if @work.number_of_posted_chapters > 1 -%>
      <%- if @chapters.length == 1 -%> 
        <!-- we're reading chapter-by-chapter -->
        <div class="navigation">
          <span class="navitem"><%= link_to t('view_entire_work', :default => "View Entire Work"), @work -%></span>
          <%= next_and_previous_links_listitems(@work, @chapter) -%>
        </div>
      <%- else -%>
        <div class="navigation">
          <span class="navitem"><%= link_to t('view-by-chapter', :default => "View Chapter By Chapter"), 
                 url_for({:controller => :chapters, :action => :show, :work_id => @work, :id => @chapters.first}) -%>
          </span>
        </div>
      <%- end -%>
    <%- end -%>
  </div>

  <div class="preface">
	<h2 class="title">
    <% if @work.restricted %><%= image_tag("lockblue.png", :size => "15x15", :alt => "(Restricted)", :title => "Restricted") %><% end %>
    <% if @work.hidden_by_admin %><%= image_tag("lockred.png", :size => "15x15", :alt => "(Hidden by Admin)", :title => "Hidden by Administrator") %><% end %>
    <%=sanitize_title_for_display @work.title %>
	</h2>
  <h3 class="byline">
   <%= byline(@work) -%>
  </h3>
  
  <%- if @chapter == @work.first_chapter -%>
    <%- unless @work.summary.blank? -%>
    <blockquote class="summary">
      <h3><%=h t('summary', :default => "Summary:") %></h3>
      <%=sanitize_limit_and_format_for_display @work.summary %>
    </blockquote>
    <%- end -%>
  
    <%- unless @work.notes.blank? && @work.endnotes.blank? -%>
      <%- current_page?(:controller => 'chapters', :action => 'show') ? linkpath = "chapter_path(@work.last_chapter.id, :anchor => 'work_endnotes')" : linkpath = "work_path(@work, :anchor => 'work_endnotes')" %>
      <blockquote class="notes">
      <h3><%=h t('notes', :default => "Notes:") %></h3>
      <%- if @work.notes.blank? -%>
        <%= t('link_to_endnotes', :default => "See the end of the page for {{notes_link}}.", :notes_link => (link_to t('notes_link', :default => "notes"), eval(linkpath))) %>
      <%- elsif !@work.endnotes.blank? -%>
        <%= sanitize_and_format_for_display(@work.notes) -%>
        <span class="endnotes-link"> 
        <%= t('link_more_endnotes', :default => "See the end of the page for more {{notes_link}}.", 
                                    :notes_link => link_to( t('notes_link', :default => 'notes'), eval(linkpath) ) ) -%>
        </span>
      <%- end -%> 
      </blockquote>
    <%- end -%>
  <%- end -%>  
</div>
  
