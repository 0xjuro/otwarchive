<h3>
  <%= ts("Chapter Index for") %> 
  <%= link_to(@work.title.html_safe, @work) %> <%= ts("by") %> <%= byline(@work) %>
</h3>

<ol class="navigation" role="navigation">
<% for chapter in @chapters %>
  <li><%= link_to chapter.display_title.html_safe, [chapter.work, chapter] %> (<%= chapter.published_at.to_date %>)</li>
<% end %>
</ol>
