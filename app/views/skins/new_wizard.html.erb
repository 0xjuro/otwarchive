
<h2><%= t('new_skin', :default => 'Create New Archive Skin')  %></h2>

<%= error_messages_for :skin %>

<ul class="navigation">
  <li id="form-link">
     <%= link_to( t('.standard', :default => 'Write Custom CSS Instead?'),
       {:url => {:controller => :skins, :action => :new, :wizard => false}},
       :href => url_for(:controller => :skins, :action => :new, :wizard => false)) -%>
  </li>
</ul>

<% form_for @skin do |f| -%>

  <%= render :partial => 'wizard_form', :locals => {:f => f} %>

  <%= f.submit t('create_skin_button', :default => 'Create')  %>

<% end -%>
