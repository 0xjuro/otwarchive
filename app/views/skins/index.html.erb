

<h2><%= @title %></h2>

<!--subnav-->
<h3 class="landmark">Navigation</h3>
<ul class="navigation" role="navigation">
	<li><%= link_to t('public_skins', :default => 'Public skins'), skins_url %></li>
  <li><%= link_to t('my_skins', :default => 'My skins'), skins_url(:q => 'mine') %></li>
  <li><%= link_to t('create_new_skin', :default => 'Create new skin'), new_skin_url %></li>
  <li><%= link_to t('preferences', :default => 'Change your skin'), user_preferences_path(@current_user) -%></li>
</ul>
<!--/subnav-->



<% for s in @skins -%>
  <div class="skin">
    <h4><%= link_to h(s.title), s %> by <%= s.author.login %>
    <% unless s.official? %> (Warning: Not officially approved) <%= link_to_help "skins-approval" -%><% end %>
    <% if @current_user && s.author == @current_user && !s.official? %>
      <%= link_to t('edit_skin', :default => 'Edit skin'), edit_skin_url(s) %>
    <% end %>
    </h4>
  </div>
<% end -%>
