<ul class="navigation">
  <li><%= link_to t('.public', :default => 'Public skins'), skins_path -%></li>
  <li><%= link_to t('.mine', :default => 'My skins'), skins_url(:q => 'mine') %></li>
  <li><%= link_to t('create_new_skin', :default => 'Create new skin'), new_skin_url %></li>
  <li><%= link_to t('.preferences', :default => 'Change your skin'), user_preferences_path(@current_user) -%></li>
</ul>

<div class="skin">
  <h2><%=  h(@skin.title) %></h2>
  <p><%= t('author', :default => "by") %> <%= skin_author_link(@skin) %></p>
  <pre><%= h @skin.css %></pre>
  <dl>
    <dt>Wizard properties, if set</dt><dd>Note, these can be overridden by custom CSS</dd>
    <%- if @skin.margin -%><dt>Margin</dt><dd><%= h @skin.margin %><%- end  -%>
    <%- if @skin.font -%><dt>Font</dt><dd><%= h @skin.font %><%- end  -%>
    <%- if @skin.background_color -%><dt>Background color</dt><dd><%= h @skin.background_color %><%- end  -%>
    <%- if @skin.foreground_color -%><dt>Foreground color</dt><dd><%= h @skin.foreground_color %><%- end  -%>
    <%- if @skin.base_em -%><dt>Relative font size</dt><dd><%= h @skin.base_em %><%- end  -%>
  </dl>
</div>


<% if @skin.editable? %>
  <%= link_to t('.edit', :default => 'Edit skin'), edit_skin_url(@skin) %>
<% end %>
