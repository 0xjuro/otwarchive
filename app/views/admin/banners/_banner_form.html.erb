<%= form_for @admin_banner, html: { class: "post" } do |f| %>
  <%= error_messages_for @admin_banner %>
  
  <fieldset>
    <legend><%= ts("Admin Banner") %></legend>
    <h3 class="landmark heading"><%= ts("Admin Banner") %></h3>
    <dl>
  
      <dt><%= f.label :content, ts("Banner text") %></dt>
      <dd>
        <p><%= allowed_html_instructions %></p>
        <%= f.text_area :content %>
      </dd>
      <dt><%= ts("Banner type") %></dt>
      <dd>
        <ul>
          <li>
            <%= f.radio_button :type, "", :checked => true %>
            <%= f.label :type, ts("Default") %>
          </li>
          <li>
            <%= f.radio_button :type, "event" %>
            <%= f.label :type_event, ts("Event (For membership drives, celebrations, etc.)") %>
          </li>
          <li>
            <%= f.radio_button :type, "alert" %>
            <%= f.label :type_alert, ts("Alert (For bugs, important changes, expected downtime, etc.)") %>
          </li>
        </ul>
      </dd>
      
      <dt><%= f.check_box :active %></dt>
      <dd><%= f.label :active, ts("Active") %></dd>

    </dl>
  </fieldset>
  
  <fieldset>
    <legend><%= ts("Actions") %></legend>
    <h3 class="landmark heading"><%= ts("Actions") %></h3>
    
    <p class="submit actions"><%= f.submit ts('Create Banner') %></p>
  </fieldset>

<% end %>
