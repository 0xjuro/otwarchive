<!-- BEGIN admin options -->
<div id="admin-options">
  <div class="navigation">
	<% if item.hidden_by_admin? %>
    <span class="navitem"><%= link_to t('options_make_visible', :default => 'Make Visible'), {:controller=>"admin/user_creations", :action=>"hide", :id=>item, :creation_type => item.class, :hidden=>'false'} %></span>
  <%- else -%>
    <span class="navitem"><%= link_to t('options_hide', :default => 'Hide'), {:controller=>"admin/user_creations", :action=>"hide", :id=>item, :creation_type => item.class, :hidden=>'true'} %></span> 
  <%- end -%>  
  <span class="navitem"><%= link_to t('options_delete', :default => 'Delete'), {:controller=>"admin/user_creations", :action=>"destroy", :id=>item, :creation_type => item.class}, :confirm => t('links.are_you_sure', :default => 'Are you sure?'), :method => :delete %></span>
  </div>
</div>
<!-- END admin options -->