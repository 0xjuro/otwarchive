<h1>Track invitations</h1>

<% form_tag url_for(:controller => 'admin/admin_invitations', :action => 'find'), :method => :get do %>
  <dl>
    <dt><%= label_tag :user_name, t('user_name', :default => 'Enter a user name:') %></dt>
    <dd><%= text_field_tag :user_name, params[:user_name]  %></dt>
    <dt><%= label_tag :token, t('user_name', :default => 'Enter an invite token:') %></dt>
    <dd><%= text_field_tag :token, params[:token]  %></dt>
  </dl>
  <p><%= submit_tag "Go" %></p>
<% end %>

<%- if @user -%>
<h3>Invitations for <%= link_to @user.login, user_invitations_path(@user) -%></h3>
<%= render :partial => 'invitations/user_invitations', :locals => {:invitations => @invitations} %>
<%- end -%>

<%- if @invitation -%>
<%= render :partial => 'invitations/invitation', :locals => {:invitation => @invitation} %>
<%- end -%>
